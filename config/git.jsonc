// Git Configuration
{
  "$schema": "https://raw.githubusercontent.com/znehraks/claude-symphony/main/schemas/git.schema.json",
  "git": {
    "auto_commit": {
      "enabled": true,
      "triggers": {
        "on_task_complete": true,
        "on_stage_complete": true,
        "on_checkpoint": true,
        "on_milestone": true
      }
    },
    "enforcement": {
      "enabled": true,
      "mandatory_stages": [
        "06-implementation",
        "07-refactoring",
        "08-qa",
        "09-testing",
        "10-deployment"
      ],
      "task_completion_requires": [
        "git_commit",
        "no_uncommitted_changes"
      ],
      "verification_prompt": "⚠️ MANDATORY: Before marking this task as complete:\n1. Stage all related changes: git add <files>\n2. Commit with conventional format: git commit -m \"type(scope): description\"\n3. Verify: git status (should show \"nothing to commit\")\n"
    },
    "commit_convention": {
      "format": "<type>(<scope>): <description>",
      "types": [
        {
          "name": "feat",
          "description": "New feature",
          "stages": [
            "06-implementation"
          ]
        },
        {
          "name": "fix",
          "description": "Bug fix",
          "stages": [
            "08-qa"
          ]
        },
        {
          "name": "refactor",
          "description": "Code refactoring",
          "stages": [
            "07-refactoring"
          ]
        },
        {
          "name": "test",
          "description": "Test addition/modification",
          "stages": [
            "09-testing"
          ]
        },
        {
          "name": "docs",
          "description": "Documentation modification",
          "stages": [
            "all"
          ]
        },
        {
          "name": "chore",
          "description": "Other changes",
          "stages": [
            "10-deployment"
          ]
        },
        {
          "name": "style",
          "description": "Code style changes",
          "stages": [
            "04-ui-ux",
            "06-implementation"
          ]
        },
        {
          "name": "perf",
          "description": "Performance improvement",
          "stages": [
            "07-refactoring"
          ]
        },
        {
          "name": "ci",
          "description": "CI/CD configuration",
          "stages": [
            "10-deployment"
          ]
        }
      ],
      "scope_mapping": {
        "01-brainstorm": "brainstorm",
        "02-research": "research",
        "03-planning": "plan",
        "04-ui-ux": "ui",
        "05-task-management": "tasks",
        "06-implementation": "impl",
        "07-refactoring": "refactor",
        "08-qa": "qa",
        "09-testing": "test",
        "10-deployment": "deploy"
      },
      "description_rules": {
        "max_length": 72,
        "language": "English",
        "start_with_verb": true,
        "no_period_at_end": true
      }
    },
    "examples": {
      "task_complete": "feat(impl): implement user authentication",
      "stage_complete": "chore(impl): complete Stage 06 - generate HANDOFF.md",
      "bug_fix": "fix(qa): fix login session expiry bug",
      "refactor": "refactor(refactor): optimize auth service code",
      "test": "test(test): add user authentication E2E tests"
    },
    "branch": {
      "naming": {
        "feature": "feature/{stage}-{task-id}",
        "bugfix": "bugfix/{issue-id}",
        "release": "release/v{version}"
      },
      "default": "main",
      "develop": "develop",
      "strategy": "feature-branch"
    },
    "automation": {
      "on_task_complete": {
        "actions": [
          "stage_changes",
          "generate_commit_message",
          "commit"
        ]
      },
      "on_stage_complete": {
        "actions": [
          "stage_all_changes",
          "generate_stage_commit_message",
          "commit",
          "create_tag"
        ]
      },
      "on_checkpoint": {
        "actions": [
          "commit_all",
          "create_checkpoint_tag"
        ]
      }
    },
    "templates": {
      "task_complete": "{{type}}({{scope}}): {{description}}\n\nTask: {{task_id}}\nStage: {{stage_id}}\n",
      "stage_complete": "chore({{scope}}): complete Stage {{stage_number}}\n\nCompleted tasks:\n{{#each completed_tasks}}\n- {{this}}\n{{/each}}\n\nNext stage: {{next_stage}}\n",
      "checkpoint": "chore(checkpoint): {{description}}\n\nStage: {{stage_id}}\nCheckpoint: {{checkpoint_id}}\nCreated: {{timestamp}}\n"
    }
  },
  "prohibited": [
    "Commit without commit message",
    "WIP commits (temporary saves)",
    "Starting with uppercase (for English)",
    "Meaningless commit messages"
  ],
  "recommended": [
    "Commit in small units",
    "Meaningful commit messages",
    "Stage only related files",
    "Run lint/format before commit"
  ]
}