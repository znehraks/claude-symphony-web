// Q&A Logging Configuration
{
  "qa_logging": {
    "enabled": true,
    "target_file": "feedback.md",
    "backup_dir": "state/qa_backups/"
  },
  "triggers": {
    "automatic": [
      {
        "event": "stage_complete",
        "description": "On stage completion",
        "priority": "high"
      },
      {
        "event": "issue_discovered",
        "description": "On new issue discovery",
        "priority": "high"
      },
      {
        "event": "process_change_request",
        "description": "On process change request",
        "priority": "medium"
      },
      {
        "event": "tool_failure",
        "description": "On tool failure",
        "priority": "high"
      },
      {
        "event": "workaround_found",
        "description": "On workaround discovery",
        "priority": "medium"
      }
    ],
    "manual": {
      "command": "/log-qa",
      "description": "Manually record Q&A"
    }
  },
  "format": {
    "section_header": "### Q{{number}}: {{title}}",
    "template": "### Q{{number}}: {{title}}\n\n**Question**: {{question}}\n\n**Answer**: {{answer}}\n\n**Solution**: {{solution}}\n\n**Future Improvement Suggestions**: {{suggestion}}\n\n**Related Stage**: {{stage_id}}\n\n**Recorded At**: {{timestamp}}\n\n---\n",
    "include": [
      "question",
      "answer",
      "solution",
      "suggestion",
      "stage_id",
      "timestamp",
      "category"
    ]
  },
  "categories": [
    {
      "name": "workflow_improvements",
      "description": "Workflow improvements",
      "keywords": [
        "process",
        "stage",
        "order",
        "automation"
      ]
    },
    {
      "name": "tool_usage",
      "description": "Tool usage",
      "keywords": [
        "MCP",
        "CLI",
        "Notion",
        "Git"
      ]
    },
    {
      "name": "process_changes",
      "description": "Process changes",
      "keywords": [
        "change",
        "modify",
        "add",
        "delete"
      ]
    },
    {
      "name": "bug_fixes",
      "description": "Bug fixes",
      "keywords": [
        "bug",
        "error",
        "failure"
      ]
    },
    {
      "name": "best_practices",
      "description": "Best practices",
      "keywords": [
        "recommended",
        "suggestion",
        "pattern",
        "rule"
      ]
    }
  ],
  "filtering": {
    "include": [
      "workflow_improvements",
      "tool_usage",
      "process_changes",
      "bug_fixes",
      "best_practices"
    ],
    "exclude": [
      "trivial_questions",
      "repeated_questions",
      "off_topic"
    ],
    "exclude_keywords": [
      "test",
      "temporary",
      "ignore"
    ]
  },
  "numbering": {
    "auto_increment": true,
    "start_from": "auto",
    "format": "Q{{number}}"
  },
  "deduplication": {
    "enabled": true,
    "similarity_threshold": 0.8,
    "on_duplicate": "merge"
  },
  "notifications": {
    "on_new_entry": {
      "enabled": true,
      "message": "New Q&A recorded in feedback.md: Q{{number}}"
    },
    "daily_summary": {
      "enabled": false,
      "time": "18:00"
    }
  },
  "export": {
    "formats": [
      "markdown",
      "json",
      "csv"
    ],
    "auto_export": {
      "enabled": false,
      "format": "json",
      "path": "state/qa_export.json"
    }
  }
}